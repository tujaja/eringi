<% form_for @download,
  :url => downloads_path,
  :html => { :multipart => true, :id => "upload_form", :target => "upload_iframe" } do |f| %>
  <%= f.file_field :uploaded_file, :onchange => "$('upload_form').submit();" %>
<% end %>
<iframe src="/404.html" id="upload_iframe" name="upload_iframe"></iframe>
